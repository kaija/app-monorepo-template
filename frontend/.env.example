# =============================================================================
# FRONTEND ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.local for local development
# Public variables (NEXT_PUBLIC_*) are exposed to the browser
# Private variables are only available on the server side
# =============================================================================

# Environment
NODE_ENV=development

# Public API Configuration (exposed to browser)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="LINE Commerce"

# Authentication Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production-min-32-chars

# OAuth Configuration (server-side only)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret

# Public Analytics (optional, exposed to browser)
NEXT_PUBLIC_GA_ID=your-google-analytics-id

# Public Feature Flags (optional, exposed to browser)
NEXT_PUBLIC_ENABLE_OAUTH=true
NEXT_PUBLIC_ENABLE_REGISTRATION=true

# Server-side Configuration
API_TIMEOUT_MS=10000
ENABLE_ANALYTICS=false

# Development Configuration
NEXT_TELEMETRY_DISABLED=1
