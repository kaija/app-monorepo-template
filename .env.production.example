# =============================================================================
# PRODUCTION ENVIRONMENT
# =============================================================================
# Copy this file to .env.production for production deployment
# ALL VALUES MUST BE REPLACED WITH SECURE PRODUCTION SECRETS
# =============================================================================

ENVIRONMENT=production
NODE_ENV=production

# Database - Production PostgreSQL (managed service)
POSTGRES_DB=line_commerce_prod
POSTGRES_USER=line_commerce_user
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_PRODUCTION_PASSWORD
POSTGRES_HOST=prod-db.example.com
POSTGRES_PORT=5432
DATABASE_URL=postgresql://line_commerce_user:REPLACE_WITH_SECURE_PRODUCTION_PASSWORD@prod-db.example.com:5432/line_commerce_prod

# Security - MUST be cryptographically secure
JWT_SECRET_KEY=REPLACE_WITH_CRYPTOGRAPHICALLY_SECURE_32_CHAR_SECRET
NEXTAUTH_SECRET=REPLACE_WITH_CRYPTOGRAPHICALLY_SECURE_32_CHAR_SECRET

# Application URLs - Production domains
NEXT_PUBLIC_APP_URL=https://linecommerce.example.com
NEXTAUTH_URL=https://linecommerce.example.com
NEXT_PUBLIC_API_URL=https://api.linecommerce.example.com
API_URL=https://api.linecommerce.example.com

# Application Configuration
NEXT_PUBLIC_APP_NAME="LINE Commerce"
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=warn

# CORS - Production domains only
CORS_ORIGINS=https://linecommerce.example.com

# OAuth - Production credentials
GOOGLE_CLIENT_ID=REPLACE_WITH_PRODUCTION_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=REPLACE_WITH_PRODUCTION_GOOGLE_CLIENT_SECRET
APPLE_CLIENT_ID=REPLACE_WITH_PRODUCTION_APPLE_CLIENT_ID
APPLE_CLIENT_SECRET=REPLACE_WITH_PRODUCTION_APPLE_CLIENT_SECRET

# Production security settings
RATE_LIMIT_REQUESTS_PER_MINUTE=60
SESSION_TIMEOUT_MINUTES=30

# Production services
SENTRY_DSN=REPLACE_WITH_PRODUCTION_SENTRY_DSN
NEXT_PUBLIC_GA_ID=REPLACE_WITH_PRODUCTION_GA_ID

# Production file storage
AWS_ACCESS_KEY_ID=REPLACE_WITH_PRODUCTION_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_PRODUCTION_AWS_SECRET_KEY
AWS_REGION=us-east-1
S3_BUCKET_NAME=REPLACE_WITH_PRODUCTION_S3_BUCKET
