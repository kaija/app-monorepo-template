# =============================================================================
# STAGING ENVIRONMENT
# =============================================================================
# Copy this file to .env.staging for staging deployment
# Use production-like settings but with staging resources
# =============================================================================

ENVIRONMENT=staging
NODE_ENV=production

# Database - Staging PostgreSQL (managed service)
POSTGRES_DB=line_commerce_staging
POSTGRES_USER=line_commerce_user
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
POSTGRES_HOST=staging-db.example.com
POSTGRES_PORT=5432
DATABASE_URL=postgresql://line_commerce_user:REPLACE_WITH_SECURE_PASSWORD@staging-db.example.com:5432/line_commerce_staging

# Security - Production-grade secrets
JWT_SECRET_KEY=REPLACE_WITH_32_CHAR_SECRET
NEXTAUTH_SECRET=REPLACE_WITH_32_CHAR_SECRET

# Application URLs - Staging environment
NEXT_PUBLIC_APP_URL=https://staging.linecommerce.example.com
NEXTAUTH_URL=https://staging.linecommerce.example.com
NEXT_PUBLIC_API_URL=https://api-staging.linecommerce.example.com
API_URL=https://api-staging.linecommerce.example.com

# Application Configuration
NEXT_PUBLIC_APP_NAME="LINE Commerce (Staging)"
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=info

# CORS - Staging domains only
CORS_ORIGINS=https://staging.linecommerce.example.com

# OAuth - Staging credentials
GOOGLE_CLIENT_ID=REPLACE_WITH_STAGING_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=REPLACE_WITH_STAGING_GOOGLE_CLIENT_SECRET
APPLE_CLIENT_ID=REPLACE_WITH_STAGING_APPLE_CLIENT_ID
APPLE_CLIENT_SECRET=REPLACE_WITH_STAGING_APPLE_CLIENT_SECRET

# Production-like settings
RATE_LIMIT_REQUESTS_PER_MINUTE=100
SESSION_TIMEOUT_MINUTES=60

# Optional services for staging
SENTRY_DSN=REPLACE_WITH_STAGING_SENTRY_DSN
NEXT_PUBLIC_GA_ID=REPLACE_WITH_STAGING_GA_ID
