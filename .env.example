# =============================================================================
# LINE Commerce Monorepo Template - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment
# NEVER commit .env files with real secrets to version control
# =============================================================================

# Environment Configuration
# =============================================================================
# Options: development, staging, production
ENVIRONMENT=development
NODE_ENV=development

# Database Configuration
# =============================================================================
# PostgreSQL connection settings
POSTGRES_DB=line_commerce
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password-change-me
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Full database URL (auto-constructed from above or set directly)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Authentication & Security
# =============================================================================
# JWT secret key - MUST be at least 32 characters for production
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-min-32-chars-required

# NextAuth secret for session encryption
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production-min-32-chars

# Application URLs
# =============================================================================
# Frontend application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000
API_URL=http://localhost:8000

# OAuth Configuration (Optional)
# =============================================================================
# Google OAuth - Get from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Apple OAuth - Get from Apple Developer Console
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key

# Application Configuration
# =============================================================================
# Application metadata
NEXT_PUBLIC_APP_NAME="LINE Commerce"
APP_VERSION=0.1.0

# Debug and logging
DEBUG=false
LOG_LEVEL=info

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security Configuration
# =============================================================================
# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Session configuration
SESSION_TIMEOUT_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Optional Services
# =============================================================================
# Email service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Analytics (optional)
NEXT_PUBLIC_GA_ID=your-google-analytics-id

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn

# File Storage (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket