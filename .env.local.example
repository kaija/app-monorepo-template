# =============================================================================
# LOCAL DEVELOPMENT ENVIRONMENT
# =============================================================================
# Copy this file to .env.local for local development
# This file contains development-friendly defaults
# =============================================================================

ENVIRONMENT=development
NODE_ENV=development

# Database - Local PostgreSQL
POSTGRES_DB=line_commerce_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/line_commerce_dev

# Security - Development keys (NOT for production)
JWT_SECRET_KEY=dev-jwt-secret-key-not-for-production-use-only
NEXTAUTH_SECRET=dev-nextauth-secret-not-for-production-use

# Application URLs - Local development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000
API_URL=http://localhost:8000

# Application Configuration
NEXT_PUBLIC_APP_NAME="LINE Commerce (Dev)"
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=debug

# CORS - Allow local development
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001

# Development OAuth (use test credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=

# Development settings
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
SESSION_TIMEOUT_MINUTES=480